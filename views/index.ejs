    <script>
    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Audit Modal Functionality
    document.addEventListener('DOMContentLoaded', function() {
      const auditModal = new bootstrap.Modal(document.getElementById('auditModal'));
      let modalShown = false;
      
      // Show modal when user scrolls 50% down the page
      window.addEventListener('scroll', function() {
        const scrollPosition = window.scrollY;
        const pageHeight = document.documentElement.scrollHeight - window.innerHeight;
        const scrollPercentage = (scrollPosition / pageHeight) * 100;
        
        if (scrollPercentage > 50 && !modalShown) {
          auditModal.show();
          modalShown = true;
        }
      });
      
      // Audit option selection
      const auditOptions = document.querySelectorAll('.audit-option');
      const startAuditBtn = document.getElementById('startAuditBtn');
      
      auditOptions.forEach(option => {
        option.addEventListener('click', function() {
          // Remove active class from all options
          auditOptions.forEach(opt => opt.classList.remove('active'));
          // Add active class to clicked option
          this.classList.add('active');
          
          // Get the audit type
          const selectedAuditType = this.getAttribute('data-audit-type');
          
          // Update button URL
          startAuditBtn.href = `/audit?type=${selectedAuditType}`;
        });
      });
      
      // Add a button in the hero section to trigger the modal
      const heroSection = document.querySelector('.hero-section');
      const readyButton = heroSection.querySelector('.btn-hubspot');
      
      // Create a new button for the audit
      const auditButton = document.createElement('a');
      auditButton.href = '#';
      auditButton.className = 'btn btn-outline-hubspot btn-lg';
      auditButton.innerHTML = 'Start Free Audit <i class="fas fa-chart-line ms-2"></i>';
      auditButton.addEventListener('click', function(e) {
        e.preventDefault();
        auditModal.show();
      });
      
      // Insert the audit button next to the ready button
      readyButton.parentNode.insertBefore(auditButton, readyButton.nextSibling);
    });
  </script>

